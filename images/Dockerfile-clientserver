FROM quay.io/redhat-user-workloads/rhtas-tenant/rhtas-cli-1-0-beta/cosign@sha256:82812a94eb64f6359c5a3adc43be03844b54a6ebe9c025cf010e88067c1ac5f3 AS cosign-image
FROM quay.io/redhat-user-workloads/rhtas-tenant/rhtas-cli-1-0-beta/gitsign@sha256:f89115971b1ede4cfa5874f90c90c8c2d79de534fd84094b1a9e626c80394f1b AS gitsign-image
FROM quay.io/redhat-user-workloads/rhtas-tenant/rhtas-cli-1-0-beta/rekor-cli@sha256:7da0656cc35c0fce3e62f80d8a1e72eac78a4caf6e636b27e598b98b77d8f9b3 AS rekor-image

FROM registry.redhat.io/rhel8/httpd-24:latest

RUN mkdir -p /var/www/html/clients
RUN mkdir -p /var/www/html/clients/darwin
RUN mkdir -p /var/www/html/clients/linux
RUN mkdir -p /var/www/html/clients/windows


COPY --from=cosign-image /usr/local/bin/cosign-linux-amd64.gz /var/www/html/clients/linux
COPY --from=cosign-image /usr/local/bin/cosign-darwin-amd64.gz /var/www/html/clients/darwin
COPY --from=cosign-image /usr/local/bin/cosign-windows-amd64.gz /var/www/html/clients/windows

RUN gzip -d /var/www/html/clients/linux/cosign-linux-amd64.gz
RUN gzip -d /var/www/html/clients/darwin/cosign-darwin-amd64.gz
RUN gzip -d /var/www/html/clients/windows/cosign-windows-amd64.gz

COPY --from=gitsign-image /usr/local/bin/gitsign_cli_darwin_amd64.gz /var/www/html/clients/darwin
COPY --from=gitsign-image /usr/local/bin/gitsign_cli_linux_amd64.gz /var/www/html/clients/linux
COPY --from=gitsign-image /usr/local/bin/gitsign_cli_windows_amd64.exe.gz /var/www/html/clients/windows

RUN gzip -d /var/www/html/clients/darwin/gitsign_cli_darwin_amd64.gz
RUN gzip -d /var/www/html/clients/linux/gitsign_cli_linux_amd64.gz
RUN gzip -d /var/www/html/clients/windows/gitsign_cli_windows_amd64.exe.gz

COPY --from=rekor-image /usr/local/bin/rekor_cli_darwin_amd64 /var/www/html/clients/darwin
COPY --from=rekor-image /usr/local/bin/rekor_cli_linux_amd64 /var/www/html/clients/linux
COPY --from=rekor-image /usr/local/bin/rekor_cli_windows_amd64.exe /var/www/html/clients/windows

RUN mv /var/www/html/clients/darwin/gitsign_cli_darwin_amd64 /var/www/html/clients/darwin/gitsign
RUN mv /var/www/html/clients/linux/gitsign_cli_linux_amd64 /var/www/html/clients/linux/gitsign
RUN mv /var/www/html/clients/windows/gitsign_cli_windows_amd64.exe /var/www/html/clients/windows/gitsign

RUN mv /var/www/html/clients/darwin/rekor_cli_darwin_amd64 /var/www/html/clients/darwin/rekor-cli
RUN mv /var/www/html/clients/linux/rekor_cli_linux_amd64 /var/www/html/clients/linux/rekor-cli
RUN mv /var/www/html/clients/windows/rekor_cli_windows_amd64.exe /var/www/html/clients/windows/rekor-cli

RUN mv /var/www/html/clients/darwin/cosign-darwin-amd64 /var/www/html/clients/darwin/cosign
RUN mv /var/www/html/clients/linux/cosign-linux-amd64 /var/www/html/clients/linux/cosign
RUN mv /var/www/html/clients/windows/cosign-windows-amd64 /var/www/html/clients/windows/cosign


CMD run-httpd

LABEL \
      com.redhat.component="trusted-artifact-signer-serve-cli-container" \
      name="trusted-artifact-signer-serve-cli-container" \
      version="0.0.1" \
      summary="Red Hat serves Trusted Artifact Signer CLI binaries" \
      description="Serves Trusted Artifact Signer CLI binaries from server" \
      io.k8s.display-name="Red Hat serves Trusted Artifact Signer CLI binaries" \
      maintainer="trusted-artifact-signer@redhat.com"
